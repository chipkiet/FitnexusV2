# ===============================
# Fitnexus Backend - .env.example
# Copy to .env and fill real values
# ===============================

# --- Database (PostgreSQL / Docker) ---
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=fitnexus_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# --- Express App ---
PORT=3001
NODE_ENV=development
BACKEND_URL=http://localhost:3001
ADDITIONAL_CORS_ORIGINS=http://localhost:5174,http://localhost:5175,http://localhost:5178,http://localhost:5179

# --- JWT Auth ---
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRES_IN=7d

# --- Frontend URL (for redirects, OAuth fallback) ---
FRONTEND_URL=http://localhost:5173

# --- Frontend dev: FE needs backend URL ---
VITE_BACKEND_URL=http://localhost:3001

# --- Google OAuth 2.0 ---
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback
SESSION_SECRET=change_me_session_secret

# --- Mail (SMTP) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_or_smtp_password

# --- Password Reset (Frontend) ---
FRONTEND_RESET_URL=http://localhost:5173/reset-password
RESET_TOKEN_TTL_MIN=30

# --- OTP / Redis ---
USE_REDIS=true
REDIS_URL=redis://127.0.0.1:6379
OTP_TTL_MIN=10
OTP_MAX_ATTEMPTS=5
REDIS_PORT=6379
REDIS_HOST=localhost
REDIS_ENABLED=true

# When running everything in Docker Compose, override hosts like:
# POSTGRES_HOST=db
# REDIS_HOST=redis
# AI_API_URL=http://ai-trainer:8000/analyze-image/

# --- Cloudinary (Asset Storage) ---
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# --- AI Trainer service (Python FastAPI) ---
# Default local dev: http://127.0.0.1:8000/analyze-image/
AI_API_URL=http://127.0.0.1:8000/analyze-image/

# --- Gemini / Generative AI ---
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# --- AI usage quota (for Free/guest) ---
    AI_QUOTA_ENABLED=1
    AI_QUOTA_FREE_LIMIT=5
    AI_QUOTA_SALT=change_me

# --- Onboarding flags ---
ONBOARDING_END_AFTER_AGE=false

# --- Payment (PayOS) ---
# PAYOS_ENV: sandbox | production
PAYOS_ENV=sandbox
PAYOS_CLIENT_ID=your_payos_client_id
PAYOS_API_KEY=your_payos_api_key
PAYOS_CHECKSUM_KEY=your_payos_checksum_key

# --- Misc / 3rd party ---
REACT_APP_RAPID_API_KEY=your_rapid_api_key
